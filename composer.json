{
  "name": "asminog/yii2-proxy",
  "description": "HTTP proxy action extension for the Yii framework",
  "type": "yii2-extension",
  "keywords": [
    "yii2",
    "extension",
    "proxy"
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "asminog\\proxy\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Serg Akudovich"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "yiisoft/yii2-httpclient": "~2.0.0"
  },
  "scripts": {
    "php-cs-fixer": "php-cs-fixer fix src",
    "phpstan": "phpstan analyse --level=9 src",
    "phpmd": [
      "phpmd ./src github cleancode,codesize,controversial,design,unusedcode,naming"
    ]
  },
  "require-dev": {
    "phpstan/phpstan": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.11",
    "phpmd/phpmd": "^2.13"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
